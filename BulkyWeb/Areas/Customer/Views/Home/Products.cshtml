@model HomeVM

@{
    var culture = new System.Globalization.CultureInfo("en-US"); // Ensure correct currency format
}

<div class="row pb-3">
    @if (Model?.Products == null || !Model.Products.Any()) // Check if Products are null or empty
    {
        <p class="text-center text-danger">No products available.</p>
    }
    else
    {
        @foreach (var product in Model.Products)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2 mb-4">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@Url.Content("~/" + product.ImageUrl)" class="card-img-top rounded" asp-append-version="true" />



                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">
                                    @(product.Title ?? "No Title")
                                </p>
                                <p class="card-title text-warning text-center">
                                    <b>@(product.Category?.Name ?? "No Category")</b>
                                </p>
                            </div>
                            <div class="mb-2">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    <span class="text-decoration-line-through">
                                        @(product.ListPrice.ToString("C", culture) ?? "N/A")
                                    </span>
                                </p>
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    <span>
                                        @(product.Price.ToString("C", culture) ?? "N/A")
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                               asp-route-productId="@product.Id"
                               class="btn btn-primary bg-warning border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
