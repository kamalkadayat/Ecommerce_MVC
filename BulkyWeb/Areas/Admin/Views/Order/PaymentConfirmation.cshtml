@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successfully</h1>
         Order Number : @Model <br /><br />
        <img src="~/images/product/OrderConfirm.jpg" width="20%" />
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Your Order has been placed Successfully! <br />
        <a asp-area="Admin"
        asp-controller="Order"
        asp-action="Details"
        asp-route-orderId="@Model" class="btn btn-primary">Back to Order Details</a>

    </div>
</div>