
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KurlStop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/BulkyWeb.styles.css" asp-append-version="true" />

    <!-- fevicon -->
    <link rel="icon" href="images/logo1.png" type="image/png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
 @*    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> *@
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link href="~/css/style.css" rel="stylesheet" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  bg-warning border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/images/logo1.png" alt="Logo" class="me-2" style="height: 50px;">
                        <span class="fw-bold text-white">KurlStop</span>
                    </a>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Order" asp-action="Index">Order Management</a>
                        </li>
                      

                      @if(User.IsInRole(SD.Role_Admin))
                        { 
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Content Management
                            </a>
                            <ul class="dropdown-menu">
                                    <li class="nav-item ">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                                </li>
                                    <li class="nav-item text-dark">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a>
                                </li>
                                    <li class="nav-item text-dark">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Company" asp-action="Index">Company</a>
                                    </li>
                                    <li class="nav-item text-dark">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Testimonial" asp-action="Index">Testimonial</a>
                                    </li>
                                    <li class="nav-item text-dark">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Blog" asp-action="Index">Blog</a>
                                    </li>
                                <li><hr class="dropdown-divider" /></li>
                                    <li class="nav-item text-dark">
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Create User</a>
                                 </li>
                                    <li class="nav-item text-dark">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Index">Manage User</a>
                                    </li>
                            </ul>
                        </li>
                       }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Customer" asp-controller="AboutUs" asp-action="Index">About Us</a>
                        </li>

                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                  @await Component.InvokeAsync("ShoppingCart")
                                </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Products">Products</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-warning text-white text-center py-5">
        <div class="container">
            <div class="row">
                <!-- About Section -->
                <div class="col-md-4 mb-4 mb-md-0">
                    <p class="fst-italic fw-light">"Empowering natural beauty, one curl at a time."</p>
                    <p>
                        &copy; 2024 - Developed with
                        <i class="bi bi-heart-fill text-danger"></i> by
                        <strong>Kamal Kadayat</strong>
                    </p>
                    <img src="/images/logo1.png" width="20%" />
                </div>

                <!-- Contact Section -->
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold">Contact Us</h5>
                    <ul class="list-unstyled mb-0">
                        <li>
                            <strong>Email:</strong>
                            <a href="mailto:contact@kurlstop.com" class="text-white text-decoration-underline">contact@kurlstop.com</a>
                        </li>
                        <li>
                            <strong>Phone:</strong> +977-123456789
                        </li>
                        <li>
                            <strong>Location:</strong> Patandhoka, Lalitpur
                        </li>
                    </ul>
                </div>

                <!-- Social Media Section -->
                <div class="col-md-4">
                    <h5 class="fw-bold">Follow Us</h5>
                    <ul class="list-unstyled d-flex justify-content-center gap-3 mb-0">
                        <li>
                            <a href="https://www.facebook.com" target="_blank" class="text-white">
                                <i class="bi bi-facebook fs-4"></i>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.instagram.com" target="_blank" class="text-white">
                                <i class="bi bi-instagram fs-4"></i>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.twitter.com" target="_blank" class="text-white">
                                <i class="bi bi-twitter fs-4"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>


    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- jQuery (Required for Toastr) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/x9rkilrcc15ioc4fo870imjmkdz9umbf2ccxzypvdl3llwhz/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <!-- Swiper JS -->
@*     <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script> *@
   @*  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> *@
@*     <!-- jQuery (Required for Toastr) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script> *@
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
